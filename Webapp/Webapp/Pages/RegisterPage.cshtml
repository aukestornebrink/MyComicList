@page
@model Webapp.Pages.RegisterPage

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/LoginPageStylesheet.css"/> @*Stylesheet voor de inlogpagina*@
    <title>Register</title>
</head>
<body>
<div>
    <div class="container1"> @*De grote container waar alle inhoud in zit*@
                    <div class="titelrow"> @*De "inlog" titel*@
                        <h1 class="display-4">Register</h1>
                    </div>
                    <div class="registerbox">
                        <form>
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="invulbalk2">
                                <label for="InputName" class="form-label" asp-for="Registermodel.UserName">Username</label>
                                <input type="text" class="form-control" id="InputName" asp-for="Registermodel.UserName">
                                <span asp-validation-for="Registermodel.UserName" class="text-danger"></span>
                            </div>
                            
                            <div class="invulbalk1">
                                <label for="exampleInputEmail1" class="form-label" asp-for="Registermodel.Email">Email address</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Registermodel.Email">
                                <span asp-validation-for="Registermodel.Email" class="text-danger"></span>
                            </div>
                
                            <div class="invulbalk2">
                                <label for="InputPassword1" class="form-label"asp-for="Registermodel.password"></label>
                                <input type="password" class="form-control" id="InputPassword1" asp-for="Registermodel.password">
                                <span asp-validation-for="Registermodel.password" class="text-danger"></span>
                            </div>
                            <div class="invulbalk2">
                                <label for="InputPassword2" class="form-label" asp-for="Registermodel.confirmpassword">Confirm Password</label>
                                <input type="password" class="form-control" id="InputPassword2" asp-for="Registermodel.confirmpassword">
                                <span asp-validation-for="Registermodel.confirmpassword" class="text-danger"></span>
                            </div>
                            <div class="submitknop">
                                <button type="submit" class="btn btn-primary">Sign-up</button>
                            </div>
                        </form>
                    </div>
                </div>
</div>
</body>
</html>