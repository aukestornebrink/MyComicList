@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model Webapp.AddEntry

@{
    ViewData["Title"] = "Add Entry"; @*Render _Layout.cshtml*@
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Add Entry</title>
    <link rel="stylesheet" href="~/css/AddEntry.css"/>
</head>
<body>
<div>
    <form method="post" enctype="multipart/form-data">
            <span>Select File:</span>
            <input type="file" name="postedFiles" accept="image/jpeg, image/png"/>
            <input type="submit" value="Upload" asp-page-handler="Upload" />
            <br/>
            <span style="color:green">@Html.Raw(Model.Message)</span>
        </form>
</div>
</body>
</html>